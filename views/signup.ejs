<% layout("/layouts/boilerplate") %>
<body>
   <br>
    <h1>Welcome to Wander Lust</h1> <br>
    <form method="POST" class="needs-validation" action="/signup" novalidate>
      <div class="mb">
        <label for="username" class="form-label">Your userName</label>
        <input type="text" id="username" class="form-control" class="form-control" name="username" required placeholder="Enter username" >
        <div class="valid-feedback"> Looks good! </div> <br>
      </div>

      <div class="mb">
        <label for="email" class="form-label">Your email</label>
        <input type="email" id="email" class="form-control" class="form-control" name="email" required placeholder="Enter email" > <br>
      </div>

      <div class="mb">
        <label for="password" class="form-label">Your password</label>
        <input type="password" id="password" class="form-control" class="form-control" name="password" required placeholder="Enter password" >
        <div class="valid-feedback"> Looks good! </div> <br>
      </div>

      <button class="btn btn-dark"> Signup </button> 

    </form>
</body>