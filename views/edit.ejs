<% layout("/layouts/boilerplate") %>
<body>
   <br>
    <h1>Edit details</h1> <br>
    <form method="POST" class="needs-validation" action="/update/<%= data.id %>" enctype="multipart/form-data" novalidate>
      <div class="mb">
        <label for="title" class="form-label">Title</label>
        <input type="text" id="title" class="form-control" id="title" class="form-control" name="title" required placeholder="Enter title" value=" <%= data.title %> " re>
        <div class="valid-feedback"> Looks good! </div> <br>
      </div>

      <div class="mb">
        <label for="description" class="form-label">Description</label>
        <textarea type="text" id="description" class="form-control" name="description" required placeholder="description" ><%= data.description %></textarea>
        <div class="invalid-feedback"> Write a short description </div> <br>
      </div>      
        
      <div class="row">
        <div class="mb col-10">
          <label for="title" class="form-label">Upload Image</label>
          <input type="file" class="form-control" name="image"> 
        </div>      

        <div class="mb col-2 thumb">
          <label for="link" class="form-label">Previous Image</label>
          <a href="<%= data.image.url %>" name="link" target="_blank" rel="noopener noreferrer"> <button type="button" class="btn btn-secondary">Click here to view</button> </a> <br>
        </div>
      </div>
        <br>
      <div class="mb">
        <label for="price" class="form-label">Enter Price</label>
        <input type="number" id="price" class="form-control" name="price" required placeholder="price" value="<%= data.price %>" >
        <div class="invalid-feedback"> Price must be valid </div> <br>
      </div>
      
      <div class="row">
        <div class="mb col-8">
          <label for="location" class="form-label">Location</label>
          <input type="text" id="location" class="form-control" name="location" required placeholder="location" value="<%= data.location %> " >
          <div class="invalid-feedback"> Please enter location </div> <br>
        </div>      
          
        <div class="mb col-4">
          <label for="country" class="form-label">Country</label>
          <input type="text" id="country" class="form-control" name="country" required placeholder="country" value="<%= data.country %> " >
          <div class="invalid-feedback"> Please enter country name </div> <br>
        </div>
      </div>  

      <button class="btn btn-dark"> submit </button> 

    </form>
</body>